<div class="card">
  <%= link_to image_tag( proto.image, class: :card__img ), proto_path(proto.id) %>
  <div class="card__body">
    <%= link_to proto.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= proto.catch_copy %>
    </p>
    <% if user_signed_in? %>
      <%= link_to "by#{current_user.name}", user_path(current_user.id), class: :card__user %>
    <% end %>
  </div>
</div>
