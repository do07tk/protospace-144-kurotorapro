<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @username %>さんの情報
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @username %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @userprofile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @useroccupation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @userposition %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @username %>さんのプロトタイプ
      </h2>
      <div class="user__card">
        <%= render partial: "protos/proto", collection: @protos %>
      </div>
    </div>
  </div>
</div>
